<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet Mapping -->
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BookingControllerServlet</servlet-name>
        <servlet-class>BookingControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingControllerServlet</servlet-name>
        <url-pattern>/BookingControllerServlet</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>MainScreenView.jsp</welcome-file>
    </welcome-file-list>

</web-app>
